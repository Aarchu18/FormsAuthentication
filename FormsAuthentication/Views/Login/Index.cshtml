@model LoginModel
@{
    ViewData["Title"] = "Index";
}

<h2>Login Form</h2><br />
<form method="post">
    <div class="container">
        <div class="form-inline">
            <label for="User Name"><b>User Name:</b></label>
            <input type="text" asp-for="UserName" class="form-control" placeholder="Enter User Name"><br /><br />
        </div>
        <div class="form-inline">
            <label for="Password"><b>Password:</b></label>
            <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password"><br /><br />
        </div>
        <button type="submit" class="btn btn-success" value="Login">Login</button>
    </div>
</form>


